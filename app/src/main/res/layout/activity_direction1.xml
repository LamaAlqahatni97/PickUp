<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EEE1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        >

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="#F1EEE1"
            android:scaleType="centerCrop"
                 app:srcCompat="@drawable/ic_navigate_before_black_24dp" />


        <TextView
            android:id="@+id/textView95"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Direction"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#030303"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="#F1EEE1"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher"/>


    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginTop="50dp"
        tools:context=".Distination" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="Car type:"
                    android:textColor="#F84B4343"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/car_Type"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:text=""
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="85dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:text="Car plate:"
                    android:textColor="#F84B4343"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carPlate"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:text=""
                    android:textSize="18sp" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="25dp"
                    android:text="Picker Name:"
                    android:textColor="#F84B4343"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/FName"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text=""
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/LName"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="25dp"
                    android:text=""
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout> </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/confirm"
            android:layout_width="170dp"
            android:layout_height="70dp"


            android:layout_marginLeft="30dp"
            android:background="#F2CF0F"
            android:onClick="Rate"
            android:text="Confirm"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#B5B50808"
            android:textColorLink="#F8F7F2F2"
            android:textSize="36sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/support"
            android:layout_width="170dp"
            android:layout_height="70dp"


            android:layout_marginLeft="15dp"
            android:background="#F2CF0F"
            android:onClick="Support"
            android:text="Support"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#B5B50808"
            android:textColorLink="#F8F7F2F2"
            android:textSize="36sp"
            android:textStyle="normal" />

    </LinearLayout>
</LinearLayout>